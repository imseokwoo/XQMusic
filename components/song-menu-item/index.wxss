/* components/song-menu-item/index.wxss */
.item {
  display: inline-block;
  width: 100%;
}

.cover {
  position: relative;
}

.cover .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.cover .play-count {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  color: #fff;
  font-size: 22rpx;
  background: rgba(0, 0, 0, .5);
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
}

.item .desc {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}