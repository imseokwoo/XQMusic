<!--pages/home-music/index.wxml-->
<van-search 
  background="#fafafa"
  placeholder="搜索您喜欢的歌曲"
  shape="round"
  disabled
  bind:click-input="toSearch"
/>

<swiper class="swiper"
        indicator-dots
        autoplay
        style="height: {{swiperImageHeight}}px"
        circular>
  <block wx:for="{{bannerList}}" wx:key="bannerId">
    <swiper-item class="swiper-item">
      <image class="swiper-image" 
             src="{{item.pic}}"
             mode="widthFix"
             bindload="handleImageLoad"></image>
    </swiper-item>
  </block>
</swiper>

<view wx:if="{{recommendSongs.length > 0}}">
  <area-header title="推荐歌曲" bind:click="handleMoreClick"/>
  <view class="song-list">
    <block wx:for="{{recommendSongs}}" wx:key="id">
      <song-item-v1 item="{{item}}"></song-item-v1>
    </block>
  </view>
</view>

<song-menu-area title="热门歌单"
                songMenu="{{hotSongMenu}}"
                wx:if="{{hotSongMenu.length > 0}}"></song-menu-area>
<song-menu-area title="推荐歌单"
                songMenu="{{recommendSongMenu}}"
                wx:if="{{recommendSongMenu.length > 0}}"></song-menu-area>

<view class="ranking">
  <area-header title="巅峰榜" showRight="{{false}}"></area-header>
  <view class="ranking-list">
    <block wx:for="{{rankings}}" wx:key="name">
      <ranking-item-area item="{{item}}"
                         bindtap="handleRankingItemClick"
                         data-idx="{{index}}">
      </ranking-item-area>
    </block>
  </view>
</view>